<Window x:Class="Bolero.GestionCommande"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion Commande" Height="500" Width="980" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TabControl VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.RowSpan="3">

            <TabItem Foreground="Black" Header="Resto" Background="#FFACA5A5" FontWeight="Bold" FontSize="14">
                <TabControl VerticalAlignment="Stretch" HorizontalAlignment="Stretch" TabStripPlacement="Left">
                    <TabControl.Resources>
                        <Style TargetType="{x:Type TabItem}">
                            <Setter Property="Padding" Value="4" />
                            <Setter Property="HeaderTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <ContentPresenter Content="{TemplateBinding Content}">
                                            <ContentPresenter.LayoutTransform>
                                                <RotateTransform Angle="0" />
                                            </ContentPresenter.LayoutTransform>
                                        </ContentPresenter>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>
                    <TabItem Foreground="Black" Header="Entrée" Background="#FFACA5A5" FontWeight="Bold" FontSize="14" >
                        <ScrollViewer HorizontalScrollBarVisibility="Auto">
                            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem Foreground="Black" Header="Suite" Background="#FFACA5A5" FontWeight="Bold" FontSize="14">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto">
                            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Foreground="Black" Header="Hors d'oeuvres" Background="#FFACA5A5" FontWeight="Bold" FontSize="14">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto">
                            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Foreground="Black" Header="Desserts" Background="#FFACA5A5" FontWeight="Bold" FontSize="14">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto">
                            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Foreground="Black" Header="Boissons" Background="#FFACA5A5" FontWeight="Bold" FontSize="14">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto">
                            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Foreground="Black" Header="Plat du jour" Background="#FFACA5A5" FontWeight="Bold" FontSize="14">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto">
                            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </TabItem>

            <TabItem Foreground="Black" Header="Maintenace" Background="#FFACA5A5" FontWeight="Bold" FontSize="14">

            </TabItem>

            <TabItem Foreground="Black" Header="Recette" Background="#FFACA5A5" FontWeight="Bold" FontSize="14">

            </TabItem>

            <TabItem Foreground="Black" Header="Etat.Resto" Background="#FFACA5A5" FontWeight="Bold" FontSize="14">

            </TabItem>

            <TabItem Foreground="Black" Header="Historique" Background="#FFACA5A5" FontWeight="Bold" FontSize="14">

            </TabItem>
        </TabControl>
        <GroupBox Header="Plats" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="1">
            <ScrollViewer HorizontalScrollBarVisibility="Auto">
                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                </StackPanel>
            </ScrollViewer>
        </GroupBox>
        <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="cmbServ" HorizontalAlignment="Stretch" VerticalAlignment="Top" SelectedIndex="0" Width="250" Height="30">
                    <ComboBoxItem Name="cmbServ0">Serveur</ComboBoxItem>
                    <ComboBoxItem Name="cmbServ1">Serveur 1</ComboBoxItem>
                    <ComboBoxItem Name="cmbServ2">Serveur 2</ComboBoxItem>
                </ComboBox>
                <ComboBox x:Name="cmbTable" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectedIndex="0" Width="250" Height="30">
                    <ComboBoxItem Name="cmbTable0">Table</ComboBoxItem>
                    <ComboBoxItem Name="cmbTable1">Table 1</ComboBoxItem>
                    <ComboBoxItem Name="cmbTable2">Table 2</ComboBoxItem>
                </ComboBox>
                <Button x:Name="btnValider" Content="Valider" Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="150" Height="50" FontWeight="Bold" FontSize="16" Foreground="White" Background="#FF079B00" Click="btnValider_Click"/>
                <Button x:Name="btnAnnuler" Content="Annuler" Grid.Row="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="100" Height="50" FontSize="16" FontWeight="Bold" Foreground="White" Background="#FFF31111" Click="btnAnnuler_Click"/>
            </Grid>
        </StackPanel>
          <DataGrid Name="dataGrid" Grid.RowSpan="2" Grid.Column="2">
            <DataGrid.Columns>
                    <DataGridTextColumn Header="Commande" ></DataGridTextColumn>
                    <DataGridTextColumn Header="Modifier" ></DataGridTextColumn>
                    <DataGridTextColumn Header="Supprimer" ></DataGridTextColumn>
                    <DataGridTextColumn Header="Facturation" ></DataGridTextColumn>
                    <DataGridTextColumn Header="Paiement" ></DataGridTextColumn>
            </DataGrid.Columns>
            <ScrollViewer HorizontalScrollBarVisibility="Auto">
                
            </ScrollViewer>
        </DataGrid>
        <Label x:Name="lblTotal" Content="Total :" Grid.Column="2" Grid.Row="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontWeight="Bold" FontSize="16"/>
        <DockPanel VerticalAlignment="Bottom" Grid.Row="2" HorizontalAlignment="Center" Grid.ColumnSpan="3">
            <Label FontFamily="Century Gothic" Content="Date : " VerticalContentAlignment="Center"  FontSize="14"/>
            <Label x:Name="lblDate" VerticalContentAlignment="Center"/>
            <Label  FontFamily="Century Gothic"  Content="Heure  :" VerticalContentAlignment="Center" FontSize="14"/>
            <Label x:Name="lblHeure" VerticalContentAlignment="Center"/>
        </DockPanel>
    </Grid>
</Window>
