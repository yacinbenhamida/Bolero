<Window x:Class="Bolero.AccesSessionCaissier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bolero" Height="401.806" Loaded="Window_Loaded" Closing="Window_Closing">
    <StackPanel VerticalAlignment="Center">
        <GroupBox>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Image Source="Resources\User.png" Height="80"/>

                <Label FontFamily="Century Gothic" FontWeight="Bold" x:Name="User" Content="Caissier 1" Margin="186,20,199,19" Grid.Row="1" HorizontalContentAlignment="Center" FontSize="14"/>
                <TextBox x:Name="txtPW" Height="43" Margin="186,21,199,19" Grid.Row="2" Width="190" />
                <TextBlock x:Name="txtOubli" Grid.Row="3" Text="" HorizontalAlignment="Center">
                <Run Text="Mot de passe oublier ?"/>
                <Hyperlink Click="Hyperlink_Click">
                 <Run Text="Cliquer ici !"/>
                </Hyperlink>
                </TextBlock>
                <Button x:Name="btnLogin" Content="Login" Margin="209,18,221,10" Grid.Row="4" Width="175" Click="btnLogin_Click" Background="#FF54B8F1" Foreground="White" FontWeight="Bold" FontSize="14" Height="60"/>

            </Grid>
        </GroupBox>
        <DockPanel HorizontalAlignment="Center" >
            <Label Content="Date : " VerticalContentAlignment="Center" FontSize="14"/>
            <Label x:Name="lblDate" VerticalContentAlignment="Center" />
            <Label Content="Heure  :" VerticalContentAlignment="Center" FontSize="14"/>
            <Label x:Name="lblHeure" VerticalContentAlignment="Center"/>
        </DockPanel>
    </StackPanel>
</Window>
